<Project Sdk="Microsoft.NET.Sdk.Razor">
  <PropertyGroup>
    <TargetFrameworks>net5.0;</TargetFrameworks>
    <RazorLangVersion>3.0</RazorLangVersion>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <Description>Strapi.AspNet.Cms</Description>
  </PropertyGroup>

  <!-- TODO: Remove warning AD0001 from <NoWarn> in the future when possible. -->
  <!--
    Adding [Swashbuckle.AspNetCore nuget] to [Orbital.Core project] causes
    [Microsoft.AspNetCore.Mvc.Analyzers.TopLevelParameterNameAnalyzer] to throw NRE when build/re-build this project.
    We don't know why but this is not our problem!
  -->
  <PropertyGroup>
    <NoWarn>1701;1702;AD0001</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="5.0.8" />
    <PackageReference
        Include="Strapi.AspNet.Engine"
        Version="1.0.4-alpha"
        Condition=" '$(Configuration.StartsWith(`MonoRepo-`))' == 'false' "
    />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference
        Include="..\Strapi.AspNet.Engine\Strapi.AspNet.Engine.csproj"
        Condition=" '$(Configuration.StartsWith(`MonoRepo-`))' == 'true' "
    />
  </ItemGroup>
</Project>
